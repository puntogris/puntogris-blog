---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <div class="container mx-auto my-4 max-w-5xl rounded-lg text-gray-300">
    <div class="rounded-lg bg-gray-800">
      <div class="pb-3">
        {
          frontmatter.image && (
            <img
              class="rounded-t-lg"
              src={frontmatter.image.url}
              alt={frontmatter.image.alt}
            />
          )
        }
        <p class="px-4 pt-4 text-lg font-bold">{frontmatter.title}</p>
      </div>
      <div class="prose- prose prose-invert max-w-none px-8 pt-2 pb-8">
        <slot />
      </div>
    </div>
  </div>
</BaseLayout>
