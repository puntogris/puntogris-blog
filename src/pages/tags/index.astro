---
import PageLayout from "../../layouts/PageLayout.astro";
import { getTagsData } from "../../utils/helpers";
const tagsData = await getTagsData();
---

<PageLayout title="Tags">
  <div class="mt-4 rounded-lg bg-gray-800 p-5 text-xl font-bold text-gray-200">
    Tags
  </div>
  <div
    class="mt-4 flex flex-col gap-3 rounded-lg bg-gray-800 p-5 text-gray-300"
  >
    {
      tagsData.map((data) => (
        <a href={`/tags/${data.slug}`}>
          <div class="flex justify-between">
            {data.tag}
            <p class="text-gray-400">[ {data.posts} ]</p>
          </div>
        </a>
      ))
    }
  </div>
</PageLayout>
